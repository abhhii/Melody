<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abhishek.melody">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MusicApp">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TracksActivity"
            android:label="Songs"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".ArtistActivity"
            android:label="Artists"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".ArtistSongsActivity"
            android:label="Artist Songs"
            android:parentActivityName=".ArtistActivity"/>
        <activity android:name=".NowPlayingActivity"
            android:label="Now Playing"/>
    </application>

</manifest>